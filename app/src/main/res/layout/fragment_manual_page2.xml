<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_screen_rotation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:tint="@color/accent_green"
        tools:ignore="UseAppTint" />

    <TextView
        android:text="Calibración correcta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/accent_green"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="\nSi el detector pita sin motivo o la lectura cambia al girar el móvil, pulsa el botón “Calibrar al máximo” para reiniciar el sensor.\n\nCada magnetómetro tiene una ligera desviación inicial, por lo que esta calibración es necesaria para obtener lecturas precisas."
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

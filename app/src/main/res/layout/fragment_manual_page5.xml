<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_magnet_green"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:tint="@color/accent_green"
        tools:ignore="UseAppTint" />

    <TextView
        android:text="El magnetómetro detecta variaciones en el campo magnético, por lo que detecta mejor los metales ferromagnéticos como hierro, acero, níquel o cobalto.

Metales como oro, plata, aluminio o cobre no siempre serán detectados, a menos que estén cerca de una corriente eléctrica."
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
